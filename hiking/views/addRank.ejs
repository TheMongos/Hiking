<!doctype html>
<html>
<head>
	<title>Hiking app</title>
	<link rel="stylesheet" href="/stylesheets/jquery.mobile-1.3.0.css" />
	<script src="/js/jquery1.8.3.js"></script>
	<script src="/js/jquery.mobile-1.3.0.min.js"></script>
</head>
<body>

<section id="pageStudentList" data-role="page">
	<header data-role="header" data-position="fixed">
	<h1>Hikes</h1>
	<a href="#pageSettings" data-transition="flip" 	data-role="button" 	data-icon="gear" data-iconpos="notext" class="ui-btn-right">Options</a>
	</header>
	<div class="content" data-role="content" id="maincontent">

		<!-- show any messages that come back with authentication -->
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>

		<!-- LOGIN FORM -->
		<form onsubmit="setAction(this)" method="post">

			<div class="form-group">
				<label>overall rating</label>
				<input type="number" class="form-control" name="overall_rating" min="0" max="5" >
			</div>
			<div class="form-group">
				<label>difficulty</label>
				<input type="number" class="form-control" name="difficulty" min="0" max="5" >
			</div>
			<div class="form-group">
				<label>cleanliness</label>
				<input type="number" class="form-control" name="cleanliness" min="0" max="5">
			</div>
			<div class="form-group">
				<label>description</label>
				<textarea  class="form-control" name="description"></textarea>
			</div>
			<input type="hidden" class="form-control" value="" name="hike_id">
			<button type="submit" class="btn btn-warning btn-lg">Submit</button>
		</form>

	</div>
	<footer data-role="footer" data-position="fixed"><h1><i>Student Mobile</i></h1></footer>
</section>
<script>
function setAction ( form) {
	var pathArray = window.location.pathname.split( '/' );
	form.action = "/hikes/" + pathArray[2] + "/addRank"
}
</script>
</body>
</html>