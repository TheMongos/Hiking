<!doctype html>
<html>
<head>
	<title>Hiking app</title>
	<link rel="stylesheet" href="/stylesheets/rtl.jquery.mobile-1.3.0.min.css" />
	<script src="/js/jquery1.8.3.js"></script>
	<script src="/js/rtl.jquery.mobile-1.3.0.min.js"></script>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
	<meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1">
</head>
<body>

<section id="pageStudentList" data-role="page">
	<header data-role="header" data-position="fixed">
	<h1>Add Rank</h1>
	
	</header>
	<div class="content" data-role="content" id="maincontent">

		<!-- show any messages that come back with authentication -->
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>

		<!-- LOGIN FORM -->
		<form onsubmit="setAction(this)" method="post" data-ajax="false">
			<div data-role='fieldcontain'>
				<label for="overall_rating" class="select">דירוג כללי</label>
				<select name="overall_rating" type="number" id="overall_rating" data-native-menu="false" >
					<option class="min-1" value="1">1</option>
					<option class="min-2" value="2">2</option>
					<option class="min-3" value="3">3</option>
					<option class="min-4" value="4">4</option>
					<option class="min-5" value="5">5</option>
				</select>
			</div>
			<div data-role='fieldcontain'>
				<label for="difficulty" class="select">רמת קושי</label>
				<select name="difficulty" type="number" id="difficulty" data-native-menu="false" >
					<option class="min-1" value="1">1</option>
					<option class="min-2" value="2">2</option>
					<option class="min-3" value="3">3</option>
					<option class="min-4" value="4">4</option>
					<option class="min-5" value="5">5</option>
				</select>
			</div>
			<div data-role='fieldcontain'>
				<label for="cleanliness" class="select">רמת נקיון</label>
				<select name="cleanliness" type="number" id="cleanliness" data-native-menu="false" >
					<option class="min-1" value="1">1</option>
					<option class="min-2" value="2">2</option>
					<option class="min-3" value="3">3</option>
					<option class="min-4" value="4">4</option>
					<option class="min-5" value="5">5</option>
				</select>
			</div>
			<div class="form-group" style="margin-top: 10px;">
				<label>תיאור</label>
				<textarea  class="form-control" name="description"></textarea>
			</div>
			<input type="hidden" class="form-control" value="" name="hike_id">
			<button type="submit" class="btn btn-warning btn-lg">שלח</button>
		</form>

	</div>
	<footer data-role="footer" data-position="fixed">
			<div data-role="navbar">
				<ul>
					<li><a rel="external" href="/home" ><span class="fa fa-home fa-2x"></span></a></li>
					<li><a rel="external" href="/profile" ><span class="fa fa-user fa-2x"></span></a></li>
					<li><a rel="external" href="/hikes" ><span class="fa fa-road fa-2x"></span></a></li>
				</ul>
			</div>
			<h1><i>Trekking</i></h1>
		</footer>
</section>
<script>

	function setAction ( form) {
		var pathArray = window.location.pathname.split( '/' );
		form.action = "/hikes/" + pathArray[2] + "/addRank"
	}
	
</script>
</body>
</html>