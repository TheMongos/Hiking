<!doctype html>
<html>
<head>
	<title>Hiking app</title>
	<link rel="stylesheet" href="/stylesheets/jquery.mobile-1.3.0.css" />
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBUNLKigfLm1BMB_oVdEXgike-QMbYNBY"></script>
	<script src="/js/jquery1.8.3.js"></script>
	<script src="/js/jquery.mobile-1.3.0.min.js"></script>
	<meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1">

</head>
<body>

	<section id="pageStudentList" data-role="page">
		<header data-role="header" data-position="fixed">
			<h1>Start Hike</h1>
			<a href="#pageSettings" data-transition="flip" 	data-role="button" 	data-icon="gear" data-iconpos="notext" class="ui-btn-right">Options</a>
		</header>
		<div class="content" data-role="content" id="maincontent">

			<button id="StartTracking" class="btn btn-warning btn-lg start">Start Tracking</button>
			<button id="StopTracking" class="btn btn-warning btn-lg start">Stop Tracking</button>
			<button id="SaveHike" class="btn btn-warning btn-lg start">Save Hike</button>
			

			<div id="timer"><span id="sw_h">00</span>:<span id="sw_m">00</span>:<span id="sw_s">00</span></div>
		    <div><span id="sw_distance">0</span></div>

			<div id="map-canvas" style="width:100%;height:300px;"></div>

			<form id="summaryForm" onsubmit="setAction(this)" method="post" data-ajax="false" >
				<div class="form-group">
					<label>Time</label>
					<input id="timeInput" class="form-control" name="time">
				</div>
				<div class="form-group">
					<label>Distance</label>
					<input id="distanceInput" type="number" class="form-control" name="distance">
				</div>
				<button type="submit" class="btn btn-warning btn-lg">Submit</button>
			</form>

		</div>
		<footer data-role="footer" data-position="fixed"><h1><i>Trekking</i></h1></footer>
	</section>
	<script>

	function setAction ( form) {
		var pathArray = window.location.pathname.split( '/' );
		form.action = "/hikes/" + pathArray[2] + "/logHike"
	}
	
	</script>

	<script type="text/javascript">
	var marker;
	var poly;
	var map ; 
	var currentLocation;
	var firstTime = true;
	var time = -1;
	var $second = $("#sw_s");
	var $min = $("#sw_m");
	var $hour = $("#sw_h");
	var refreshIntervalId;
	var lastPosition;
	var distance = 0;
	var tracking_data = []; // Array containing GPS position objects


	$(document).ready(function(){
		$("#StopTracking").closest('.ui-btn').hide();
		$("#SaveHike").closest('.ui-btn').hide();

	});


	function initialize() {
		if (navigator.geolocation) {
			navigator.geolocation.getCurrentPosition(function (position) {
				var mapOptions = {
					center: { lat: position.coords.latitude, lng: position.coords.longitude},
					zoom: 13
				};
				map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
				currentLocation = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
				marker = new google.maps.Marker({
					position: currentLocation,
					map: map		
				});

				var polyOptions = {
					strokeColor: '#4970ff',
					strokeOpacity: 1.0,
					strokeWeight: 5
				};
				poly = new google.maps.Polyline(polyOptions);
				poly.setMap(map);
			});
		}
	}
	google.maps.event.addDomListener(window, 'load', initialize);

	
	function addLatLng(currentLocation) {

		var path = poly.getPath();
		

		path.push(currentLocation);
		marker.setPosition(currentLocation);


	}

	function getDistanceFromLatLonInKm(lat1,lon1,lat2,lon2) {
	  var R = 6371; // Radius of the earth in km
	  var dLat = deg2rad(lat2-lat1);  // deg2rad below
	  var dLon = deg2rad(lon2-lon1); 
	  var a = 
	    Math.sin(dLat/2) * Math.sin(dLat/2) +
	    Math.cos(deg2rad(lat1)) * Math.cos(deg2rad(lat2)) * 
	    Math.sin(dLon/2) * Math.sin(dLon/2)
	    ; 
	  var c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a)); 
	  var d = R * c; // Distance in km
	  return d;
	}

	function deg2rad(deg) {
	  return deg * (Math.PI/180)
	}

	function updateTimer() {
		var s = parseInt($second.html()) + 1 ;
		var m = parseInt($min.html());
		var h = parseInt($hour.html());

        if(s > 59 ) {
        	s = 0;
        	m++;
        }

		if(m > 59 ) {
        	m = 0;
        	h++;	
        }

        $second.html("0".substring(s >= 10) + s);	
        $min.html("0".substring(m >= 10) + m);	
        $hour.html("0".substring(h >= 10) + h);	
    }

	$("#StartTracking").click(function(){
		$("#StopTracking").closest('.ui-btn').show();
		$("#StartTracking").closest('.ui-btn').hide();
		// Start tracking the User
		watch_id = navigator.geolocation.watchPosition(

        // Success
        function(position){
        	// console.log("position: " + JSON.stringify(position));
        	tracking_data.push(position);
        	currentLocation = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
        	addLatLng(currentLocation);
        	if(firstTime) {
        		refreshIntervalId = setInterval(updateTimer, 1000);
        		firstTime = false;
        	} else {
        		distance += getDistanceFromLatLonInKm(position.coords.latitude, position.coords.longitude,
        			lastPosition.coords.latitude, lastPosition.coords.longitude);
        		$("#sw_distance").html(distance);
        	}

        	map.setCenter(currentLocation);
        	lastPosition = position;
            //console.log("tracking_data: " + JSON.stringify(tracking_data));
        },

        // Error
        function(error){
        	console.log(error);
        },

        // Settings
        {   enableHighAccuracy: true,
        	timeout: 5000,
        	maximumAge: 0});
	});

	$("#StopTracking").click(function(){
		$("#SaveHike").closest('.ui-btn').show();
		$("#StopTracking").closest('.ui-btn').hide();
		clearInterval(refreshIntervalId);
		navigator.geolocation.clearWatch(watch_id);
		var str = $("#timer").text();
		$("#timeInput").val(str);
		$("#distanceInput").val(distance);

	});

	$("#SaveHike").click(function(){
		$("#summaryForm").submit();
	});
	</script>
</body>
</html>